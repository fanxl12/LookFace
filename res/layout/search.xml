<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_search"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecognitionActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_search_picture"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="4"
                android:padding="3dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="choice"
                        android:text="照片"
                        android:textSize="12sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="getId"
                        android:text="搜索"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索说明：" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result_info"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:stretchColumns="0,1,2" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_search_1"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_search_2"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_search_3"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_name_1"
                    style="@style/textStyle"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_name_2"
                    style="@style/textStyle"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_name_3"
                    style="@style/textStyle"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_search_4"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_search_5"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_search_6"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_name_4"
                    style="@style/textStyle"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_name_5"
                    style="@style/textStyle"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_name_6"
                    style="@style/textStyle"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_search_7"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_search_8"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_search_9"
                    style="@style/PictureStyle"
                    android:layout_width="0dp"
                    android:layout_height="95dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_name_7"
                    style="@style/textStyle"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_name_8"
                    style="@style/textStyle"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_name_9"
                    style="@style/textStyle"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>